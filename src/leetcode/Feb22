class Solution {
    public int binaryGap(int n) {
        int maxDiff=0;
        int prev=-1;
        int curr=0;
        while(n>0){
            if ((n & 1) == 1){

                maxDiff=(prev!=-1)?Math.max(curr-prev, maxDiff):maxDiff;
                prev=curr;
            }
            curr++;
            n=n>>1;


        }
        return maxDiff;
    }
}